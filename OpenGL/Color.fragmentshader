#version 330

in vec3 retNormal;
in vec2 retTexCoord;

out vec4 FragColor;

uniform sampler2D sampler1;
uniform sampler2D sampler2;

void main()
{
  // FragColor = vec4(1.0f, 1.0f, 1.0f, 1.0f);
  FragColor = mix(texture(sampler1, retTexCoord),   texture(sampler2, retTexCoord), 0.5) * vec4(retNormal, 1.0f); 
}