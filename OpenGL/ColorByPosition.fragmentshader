#version 330

in vec3 retNormal;
in vec2 retTexCoord;

in vec3 retworldPosColor; 

uniform sampler2D sampler1;

out vec4 FragColor;

void main()
{
   // retworldPosColor will be used as the rgb values and we
   //use the abs() to get the absolute value to handle the negative coordinates
   vec3 color = abs(retworldPosColor); 

   // FragColor = texture(sampler1, retTexCoord);
   FragColor = texture(sampler1, retTexCoord) * vec4(color, 1.0);
}